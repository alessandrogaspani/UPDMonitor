<UserControl x:Class="UDPMonitor.Views.MessageDetail_View"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:prism="http://prismlibrary.com/"
             prism:ViewModelLocator.AutoWireViewModel="True"
             Width="640"
             Height="480"
             Background="{StaticResource Brush.Surface}">

    <prism:Dialog.WindowStyle>
        <Style TargetType="Window">
            <Setter Property="WindowState" Value="Normal" />
            <Setter Property="WindowStyle" Value="None" />
            <Setter Property="AllowsTransparency" Value="True" />
        </Style>
    </prism:Dialog.WindowStyle>

    <Grid Margin="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="10"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="12"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0"
                Padding="10"
                Style="{StaticResource Panel.Border}">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="10"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0"
                           VerticalAlignment="Center"
                           Style="{StaticResource Text.Secondary}"
                           Text="Timestamp: " />

                <TextBlock Grid.Column="2"
                           Style="{StaticResource Text.Mono}"
                           VerticalAlignment="Center"
                           Text="{Binding TimeStamp, StringFormat={}{0:yyyy-MM-dd HH:mm:ss.fff}}" />
            </Grid>
        </Border>

        <!-- Body -->
        <Border Grid.Row="2"
                Padding="10"
                Style="{StaticResource Panel.Border}">
            
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="6"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <TextBlock Grid.Row="0"
                           Style="{StaticResource Text.Secondary}"
                           Text="Message: " />

                <TextBox Grid.Row="2"
                         Text="{Binding Text}"
                         IsReadOnly="True"
                         TextWrapping="Wrap"
                         AcceptsReturn="True"
                         VerticalScrollBarVisibility="Auto"
                         HorizontalScrollBarVisibility="Auto"
                         Style="{StaticResource TextBox.Editor}" />
            </Grid>
        </Border>

        <!-- Bottom buttons -->
        <Grid Grid.Row="4">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <TextBlock Grid.Column="0"
                       VerticalAlignment="Center"
                       
                       Style="{StaticResource Text.Hint}"
                       Text="Double-click a row to open details." />

            <!-- Chiude la dialog Prism: ButtonResult=OK -->
            <Button Grid.Column="1"
                    Content="Close"
                    Width="100"
                    Command="{Binding CloseCommand}" Style="{StaticResource Button.Primary}" />
        </Grid>
    </Grid>
</UserControl>
