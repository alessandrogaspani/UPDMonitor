<UserControl x:Class="UDPMonitor.Views.Creator_View"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:prism="http://prismlibrary.com/"
             prism:ViewModelLocator.AutoWireViewModel="True"
             Width="640"
             Height="480"
             Background="{StaticResource Brush.Surface}">

    <prism:Dialog.WindowStyle>
        <Style TargetType="Window">
            <Setter Property="WindowState" Value="Normal" />
            <Setter Property="WindowStyle" Value="None" />
            <Setter Property="AllowsTransparency" Value="True" />
        </Style>
    </prism:Dialog.WindowStyle>

    <Grid Margin="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="12"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0"
                Padding="12"
                Style="{StaticResource Panel.Border}">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="14"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Avatar circolare -->
                <Grid Grid.Column="0" VerticalAlignment="Top">
                    <Ellipse Width="92" Height="92"
                             Stroke="{StaticResource Brush.Border}"
                             StrokeThickness="1"
                             SnapsToDevicePixels="True">
                        <Ellipse.Fill>
                            <ImageBrush ImageSource="{StaticResource Icon.Creator}"
                                        Stretch="UniformToFill" />
                        </Ellipse.Fill>
                    </Ellipse>
                </Grid>

                <!-- Speech bubble -->
                <Grid Grid.Column="2">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="8"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0"
                               Style="{StaticResource Text.Secondary}"
                               Text="{Binding SpeakerName, StringFormat={}{0} says:}" />

                    <Border Grid.Row="2"
                            Background="{StaticResource Brush.SurfaceAlt}"
                            BorderBrush="{StaticResource Brush.Border}"
                            BorderThickness="1"
                            CornerRadius="12"
                            Padding="12">

                        <TextBlock Style="{StaticResource Text.Body}"
                                   Text="{Binding CurrentQuote}"
                                   TextWrapping="Wrap" />
                    </Border>
                </Grid>
            </Grid>
        </Border>

        <!-- Bottom buttons -->
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="8"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="8"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <TextBlock Grid.Column="0"
                       VerticalAlignment="Center"
                       Style="{StaticResource Text.Hint}"
                       TextWrapping="Wrap"
                       Text="1 marzo 2026" />

            <Button Grid.Column="1"
                    Content="Random"
                    Width="110"
                    Style="{StaticResource Button.Secondary}"
                    Command="{Binding RandomQuoteCommand}" />

            <Button Grid.Column="3"
                    Content="Next"
                    Width="110"
                    Style="{StaticResource Button.Secondary}"
                    Command="{Binding NextQuoteCommand}" />

            <Button Grid.Column="5"
                    Content="Close"
                    Width="100"
                    Command="{Binding CloseCommand}"
                    Style="{StaticResource Button.Primary}" />
        </Grid>
    </Grid>
</UserControl>