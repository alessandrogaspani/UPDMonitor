<UserControl x:Class="UDPMonitor.Views.About_View"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:prism="http://prismlibrary.com/"
             prism:ViewModelLocator.AutoWireViewModel="True"
             Width="640"
             Height="480"
             Background="{StaticResource Brush.Surface}">

    <prism:Dialog.WindowStyle>
        <Style TargetType="Window">
            <Setter Property="WindowState" Value="Normal" />
            <Setter Property="WindowStyle" Value="None" />
            <Setter Property="AllowsTransparency" Value="True" />
        </Style>
    </prism:Dialog.WindowStyle>

    <Grid Margin="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="10"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="12"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0"
                Padding="10"
                Style="{StaticResource Panel.Border}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="6"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="6"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Software -->
                <Grid Grid.Row="0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="90"/>
                        <ColumnDefinition Width="auto"/>
                        <ColumnDefinition Width="10"/>
                        <ColumnDefinition Width="auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Grid.Column="0"
                               VerticalAlignment="Center"
                               Style="{StaticResource Text.Secondary}"
                               Text="Software:" />

                    <TextBlock Grid.Column="1"
                               VerticalAlignment="Center"
                               Style="{StaticResource Text.Body}"
                               Text="{Binding SoftwareName}" />

                    <Button Grid.Column="3"
                            Width="30"
                            Height="30"
                            Margin="0,0,8,0"
                            Content="{DynamicResource Icon.GitHub}"
                            Style="{StaticResource Button.SecondaryImage}"
                            Command="{Binding OpenRepositoryCommand}">

            
                    </Button>
                </Grid>

                <!-- Version -->
                <Grid Grid.Row="2">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="90"/>
                        <ColumnDefinition Width="10"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Grid.Column="0"
                               VerticalAlignment="Center"
                               Style="{StaticResource Text.Secondary}"
                               Text="Version:" />

                    <TextBlock Grid.Column="2"
                               VerticalAlignment="Center"
                               Style="{StaticResource Text.Mono}"
                               Text="{Binding Version}" />
                </Grid>

                <!-- Copyright -->
                <TextBlock Grid.Row="4"
                           Style="{StaticResource Text.Hint}"
                           Text="{Binding Copyright}" />
            </Grid>
        </Border>

        <!-- Body -->
        <Border Grid.Row="2"
                Padding="10"
                Style="{StaticResource Panel.Border}">

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="8"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="12"/>

                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="6"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="6"/>
                    <RowDefinition Height="Auto"/>

                    <RowDefinition Height="12"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Creator -->
                <Grid Grid.Row="0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="90"/>
                        <ColumnDefinition Width="10"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Grid.Column="0"
                               VerticalAlignment="Center"
                               Style="{StaticResource Text.Secondary}"
                               Text="Creator:" />

                    <TextBlock Grid.Column="2"
                               VerticalAlignment="Center"
                               Style="{StaticResource Text.Body}"
                               Text="{Binding Creator}" />
                </Grid>

                <!-- Section title -->
                <TextBlock Grid.Row="2"
                           Style="{StaticResource Text.Secondary}"
                           Text="System information:" />

                <!-- OS -->
                <Grid Grid.Row="4">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="90"/>
                        <ColumnDefinition Width="10"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Grid.Column="0"
                               VerticalAlignment="Center"
                               Style="{StaticResource Text.Secondary}"
                               Text="OS:" />

                    <TextBox Grid.Column="2"  
                             IsReadOnly="True"
                             Style="{StaticResource TextBox.Mono}"
                             Text="{Binding OS}" />
                </Grid>

                <!-- Runtime -->
                <Grid Grid.Row="6">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="90"/>
                        <ColumnDefinition Width="10"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Grid.Column="0"
                               VerticalAlignment="Center"
                               Style="{StaticResource Text.Secondary}"
                               Text="Runtime:" />

                    <TextBox Grid.Column="2"  
                             IsReadOnly="True"
                             Style="{StaticResource TextBox.Mono}"
                             Text="{Binding Runtime}" />
                </Grid>

                <!-- Architecture -->
                <Grid Grid.Row="8">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="90"/>
                        <ColumnDefinition Width="10"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Grid.Column="0"                           
                               VerticalAlignment="Center"
                               Style="{StaticResource Text.Secondary}"
                               Text="Arch:" />

                    <TextBox Grid.Column="2"                         
                             IsReadOnly="True"
                             Style="{StaticResource TextBox.Mono}"
                             Text="{Binding Architecture}" />
                </Grid>

                <!-- Description -->
                <TextBlock Grid.Row="10"
                           Style="{StaticResource Text.Secondary}"
                           Text="Description:" />

                <TextBox Grid.Row="11"
                         IsReadOnly="True"
                         AcceptsReturn="True"
                         TextWrapping="Wrap"
                         VerticalScrollBarVisibility="Auto"
                         HorizontalScrollBarVisibility="Disabled"
                         Style="{StaticResource TextBox.Mono}"
                         Text="UDPMonitor is a lightweight tool to monitor UDP traffic, inspect messages and export logs to CSV." />
            </Grid>
        </Border>

        <!-- Bottom buttons -->
        <Grid Grid.Row="4">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="10"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="10"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <TextBlock Grid.Column="0"
                       VerticalAlignment="Center"
                       Style="{StaticResource Text.Quote}"
                       TextWrapping="Wrap"                     
                       Text="The parry is wrong. - Drizzt Do'Urden" />

            <Button Grid.Column="1"
                    Content="Copy info"
                    Width="110"
                    Command="{Binding CopyDiagnosticsCommand}"
                    Style="{StaticResource Button.Secondary}" />

            <Button Grid.Column="3"
                    Content="Open logs"
                    Width="110"
                    Command="{Binding OpenLogsFolderCommand}"      
                    Style="{StaticResource Button.Secondary}" />

            <Button Grid.Column="5"
                    Content="Close"
                    Width="100"
                    Command="{Binding CloseCommand}"
                    Style="{StaticResource Button.Primary}" />
        </Grid>
    </Grid>
</UserControl>