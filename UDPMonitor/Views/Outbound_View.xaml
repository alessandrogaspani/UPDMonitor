<UserControl x:Class="UDPMonitor.Views.Outbound_View"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:prism="http://prismlibrary.com/"
             prism:ViewModelLocator.AutoWireViewModel="True"
             Background="{StaticResource Brush.Surface}">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Connection card -->
            <RowDefinition Height="10"/>
            <RowDefinition Height="Auto"/>
            <!-- AutoSend card -->
            <RowDefinition Height="10"/>
            <RowDefinition Height="Auto"/>
            <!-- Label -->
            <RowDefinition Height="6"/>
            <RowDefinition Height="*"/>
            <!-- Editor -->
            <RowDefinition Height="10"/>
            <RowDefinition Height="Auto"/>
            <!-- Bottom bar -->
        </Grid.RowDefinitions>

        <!-- =========================
             CONNECTION PANEL
             ========================= -->
        <Border Grid.Row="0"
                Padding="10"
                Style="{StaticResource Panel.Border}">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="auto"/>
                    <ColumnDefinition Width="180"/>
                    <ColumnDefinition Width="10"/>
                    <ColumnDefinition Width="auto"/>
                    <ColumnDefinition Width="110"/>
                    <ColumnDefinition Width="10"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="10"/>
                    <ColumnDefinition Width="150"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0"
                           Style="{StaticResource Text.Secondary}"
                           VerticalAlignment="Center"
                           Text="IP: " />

                <TextBox Grid.Column="1"
                         Style="{StaticResource TextBox.Mono}"
                         VerticalAlignment="Center"
                         MinWidth="150"
                         Text="{Binding IpAddress, UpdateSourceTrigger=PropertyChanged}" />

                <TextBlock Grid.Column="3"
                           Style="{StaticResource Text.Secondary}"
                           VerticalAlignment="Center"
                           Text="Port: " />

                <TextBox Grid.Column="4"
                         Style="{StaticResource TextBox.Mono}"
                         VerticalAlignment="Center"
                         MinWidth="80"
                         Text="{Binding Port, UpdateSourceTrigger=PropertyChanged}" />

                <!-- Connect/Disconnect -->
                <Button Grid.Column="6"
                        VerticalAlignment="Center"
                        Width="100"
                        Padding="14,6"
                        Command="{Binding ToggleConnectionCommand}">
                    <Button.Style>
                        <Style TargetType="{x:Type Button}" BasedOn="{StaticResource Button.Secondary}">
                            <Setter Property="Content" Value="Connect"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding IsConnected}" Value="True">
                                    <Setter Property="Content" Value="Disconnect"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>

                <!-- Status badge: Connection -->
                <Border Grid.Column="8"
                        Padding="10,4"
                        CornerRadius="10"
                        Width="150"
                        VerticalAlignment="Center"
                        HorizontalAlignment="Left">
                    <Border.Style>
                        <Style TargetType="{x:Type Border}">
                            <Setter Property="Background" Value="#33FF0000"/>
                            <Setter Property="BorderBrush" Value="#FFFF0000"/>
                            <Setter Property="BorderThickness" Value="1"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding IsConnected}" Value="True">
                                    <Setter Property="Background" Value="#3300FF00"/>
                                    <Setter Property="BorderBrush" Value="#FF00FF00"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Border.Style>

                    <TextBlock HorizontalAlignment="Center">
                        <TextBlock.Style>
                            <Style TargetType="{x:Type TextBlock}">
                                <Setter Property="Text" Value="Disconnected"/>
                                <Setter Property="Foreground" Value="#FF0000"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding IsConnected}" Value="True">
                                        <Setter Property="Text" Value="Connected"/>
                                        <Setter Property="Foreground" Value="#00FF00"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </TextBlock.Style>
                    </TextBlock>
                </Border>

            </Grid>
        </Border>

        <!-- =========================
             AUTOSEND PANEL
             ========================= -->
        <Border Grid.Row="2"
                Padding="10"
                Style="{StaticResource Panel.Border}"
                BorderThickness="1">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="auto"/>
                    <ColumnDefinition Width="90"/>
                    <ColumnDefinition Width="10"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="10"/>
                    <ColumnDefinition Width="150"/>
                    <ColumnDefinition Width="10"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0"
                           Style="{StaticResource Text.Secondary}"                           
                           VerticalAlignment="Center"
                           Text="AutoSend Hz: " />

                <!-- Hz input -->
                <TextBox Grid.Column="1"
                         Style="{StaticResource TextBox.Mono}"
                         VerticalAlignment="Center"
                         MinWidth="70"
                         Text="{Binding AutoSendHz, UpdateSourceTrigger=PropertyChanged}" />

                <!-- Toggle AutoSend -->
                <Button Grid.Column="3"
                        VerticalAlignment="Center"
                        Padding="14,6"
                        Width="150"
                        Command="{Binding ToggleAutoSendCommand}"
                        IsEnabled="{Binding IsConnected}">
                    <Button.Style>
                        <Style TargetType="{x:Type Button}" BasedOn="{StaticResource Button.Secondary}">
                            <Setter Property="Content" Value="Start AutoSend"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding IsAutoSending}" Value="True">
                                    <Setter Property="Content" Value="Stop AutoSend"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>

                <!-- Status badge: AutoSend -->
                <Border Grid.Column="5"
                        Padding="10,4"
                        CornerRadius="10"
                        Width="150"
                        VerticalAlignment="Center"
                        HorizontalAlignment="Left">
                    <Border.Style>
                        <Style TargetType="{x:Type Border}">
                            <Setter Property="Background" Value="#33888888"/>
                            <Setter Property="BorderBrush" Value="#FF888888"/>
                            <Setter Property="BorderThickness" Value="1"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding IsAutoSending}" Value="True">
                                    <Setter Property="Background" Value="#331A73FF"/>
                                    <Setter Property="BorderBrush" Value="#FF1A73FF"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Border.Style>

                    <TextBlock HorizontalAlignment="Center">
                        <TextBlock.Style>
                            <Style TargetType="{x:Type TextBlock}">
                                <Setter Property="Text" Value="AutoSend: OFF"/>
                                <Setter Property="Foreground" Value="#888888"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding IsAutoSending}" Value="True">
                                        <!-- Mostra anche il valore inserito -->
                                        <Setter Property="Text" Value="{Binding AutoSendHz, StringFormat=AutoSend: {0} Hz}"/>
                                        <Setter Property="Foreground" Value="#1A73FF"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </TextBlock.Style>
                    </TextBlock>
                </Border>

            </Grid>
        </Border>

        <!-- Label -->
        <TextBlock Grid.Row="4"
                   Text="Message"
                   Style="{StaticResource Text.Hint}" />

        <!-- Message editor -->
        <Border Grid.Row="6"
                Padding="6"
                Style="{StaticResource Panel.Border}"
                >
          
            <TextBox Text="{Binding TextMessage, UpdateSourceTrigger=PropertyChanged}"
                     Style="{StaticResource TextBox.Editor}"
                     AcceptsReturn="True"
                     TextWrapping="Wrap"
                     VerticalScrollBarVisibility="Auto"
                     HorizontalScrollBarVisibility="Auto"
                     MinHeight="120"
                     IsEnabled="{Binding IsConnected}" />
        </Border>

        <!-- Bottom bar -->
        <Grid Grid.Row="8">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="10"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <TextBlock Grid.Column="0"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Right">
                <TextBlock.Style>
                    <Style TargetType="{x:Type TextBlock}" BasedOn="{StaticResource Text.Hint}">
                        <Setter Property="Text" Value="Connect to enable sending."/>
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding IsConnected}" Value="True">
                                <Setter Property="Text" Value="Ready to send."/>
                            </DataTrigger>
                            <DataTrigger Binding="{Binding IsAutoSending}" Value="True">
                                <Setter Property="Text" Value="AutoSend active."/>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </TextBlock.Style>
            </TextBlock>

            <Button Grid.Column="2"
                    Width="100"
                    Style="{StaticResource Button.Outline}"
                    Content="Send Message"
                    Command="{Binding SendCommand}"
                    IsEnabled="{Binding IsConnected}" />
        </Grid>

    </Grid>
</UserControl>
