<Window x:Class="UDPMonitor.Views.MainWindow_View"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:prism="http://prismlibrary.com/"
        xmlns:local="clr-namespace:UDPMonitor"
        xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
        xmlns:behaviors="clr-namespace:UDPMonitor.Behaviors"
        prism:ViewModelLocator.AutoWireViewModel="True"
        WindowStartupLocation="CenterScreen"
        WindowState="Maximized"
        WindowStyle="None"
        Height="350" Width="525">

    <!-- RoutedCommand bindings: OBBLIGATORI -->
    <Window.CommandBindings>
        <!-- CLOSE -->
        <CommandBinding Command="{x:Static ApplicationCommands.Close}"
                        CanExecute="CanExecute_Always"
                        Executed="Executed_Close" />

        <!-- MINIMIZE -->
        <CommandBinding Command="{x:Static local:WindowCommands.Minimize}"
                        CanExecute="CanExecute_Always"
                        Executed="Executed_Minimize" />

        <!-- TOGGLE MAXIMIZE/RESTORE -->
        <CommandBinding Command="{x:Static local:WindowCommands.ToggleMaximize}"
                        CanExecute="CanExecute_Always"
                        Executed="Executed_ToggleMaximize" />
    </Window.CommandBindings>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!-- TOP BAR -->
        <Grid Grid.Row="0" Background="{StaticResource Brush.Menu}">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="auto" />
                <ColumnDefinition Width="auto" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>


            <Image Grid.Column="0" Source="/Assets/UDPLogo.png" Stretch="UniformToFill"
                   Width="30" Height="30" Margin="5" />

            <Button Grid.Column="1"  Width="46" Height="40"
                   Content="?"
                   Style="{StaticResource Button.Outline}"
                   Command="{Binding OpenAboutDialogCommand}"/> 

            <!-- HIT AREA: solo colonna sinistra, trasparente, prende il doppio click -->
            <Border Grid.Column="2"
                Background="Transparent"
                PreviewMouseLeftButtonDown="TitleBar_PreviewMouseLeftButtonDown"
                PreviewMouseMove="TitleBar_PreviewMouseMove"
                PreviewMouseLeftButtonUp="TitleBar_PreviewMouseLeftButtonUp" />

            <!-- Titolo (sopra al Border) -->
            <StackPanel Grid.Column="2"
                Orientation="Horizontal"
                VerticalAlignment="Center"
                HorizontalAlignment="Right"
                Margin="10,0"
                IsHitTestVisible="False">
                <TextBlock Text="{Binding Title}"
                   Style="{StaticResource Text.Body}"
                   VerticalAlignment="Center"/>
            </StackPanel>

         

      

            <!-- Pulsanti finestra (a destra, senza trigger) -->
            <StackPanel Grid.Column="3"
                HorizontalAlignment="Right"
                Orientation="Horizontal">

                <Button Width="46" Height="40"
                Content="—"
                Style="{StaticResource Button.TitleBarButton}"
                Command="{x:Static local:WindowCommands.Minimize}" />

                <Button Width="46" Height="40"
                Content="□"
                Style="{StaticResource Button.TitleBarButton}"
                Command="{x:Static local:WindowCommands.ToggleMaximize}" />

                <Button Width="46" Height="40"
                Content="✕"
                Style="{StaticResource Button.TitleBarCloseButton}"
                Command="{x:Static ApplicationCommands.Close}" />
            </StackPanel>
        </Grid>

        <!-- CONTENT -->
        <Grid Grid.Row="1" Background="{StaticResource Brush.Surface}">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <ContentControl Grid.Column="0"
                            prism:RegionManager.RegionName="{x:Static local:RegionNames.InboundRegion}" />
            <ContentControl Grid.Column="1"
                            prism:RegionManager.RegionName="{x:Static local:RegionNames.OutboundRegion}" />
        </Grid>
    </Grid>
</Window>