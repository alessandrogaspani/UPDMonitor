<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- ========================================================= -->
    <!-- Separators                                                 -->
    <!-- ========================================================= -->
    <Style x:Key="Separator.Line" TargetType="{x:Type Border}">
        <Setter Property="Height" Value="1" />
        <Setter Property="Background" Value="{StaticResource Brush.Separator}" />
        <Setter Property="SnapsToDevicePixels" Value="True" />
        <Setter Property="Margin" Value="0,8,0,8" />
    </Style>

    <!-- ========================================================= -->
    <!-- Card (semi-material: border + subtle depth)                -->
    <!-- NOTE: keep it flat: no heavy shadows                        -->
    <!-- ========================================================= -->
    <Style x:Key="Card.Border" TargetType="{x:Type Border}">
        <Setter Property="Background" Value="{StaticResource Brush.Surface}" />
        <Setter Property="BorderBrush" Value="{StaticResource Brush.Border}" />
        <Setter Property="BorderThickness" Value="1" />
        <Setter Property="CornerRadius" Value="8" />
        <Setter Property="Padding" Value="8" />
        <Setter Property="SnapsToDevicePixels" Value="True" />
    </Style>

    <!-- Panel inside card (flatter, tighter) -->
    <Style x:Key="Panel.Border" TargetType="{x:Type Border}">
        <Setter Property="Background" Value="{StaticResource Brush.SurfaceRaised}" />
        <Setter Property="BorderBrush" Value="{StaticResource Brush.Border}" />
        <Setter Property="BorderThickness" Value="1" />
        <Setter Property="CornerRadius" Value="8" />
        <Setter Property="Padding" Value="8" />
        <Setter Property="SnapsToDevicePixels" Value="True" />
    </Style>

    <!-- Header strip (optional) -->
    <Style x:Key="HeaderStrip.Border" TargetType="{x:Type Border}">
        <Setter Property="Background" Value="{StaticResource Brush.SurfaceAlt}" />
        <Setter Property="BorderBrush" Value="{StaticResource Brush.Border}" />
        <Setter Property="BorderThickness" Value="1" />
        <Setter Property="CornerRadius" Value="8" />
        <Setter Property="Padding" Value="8" />
        <Setter Property="SnapsToDevicePixels" Value="True" />
    </Style>

    <!-- ========================================================= -->
    <!-- Small "pill" badge (for Connected/Disconnected, AutoSend)  -->
    <!-- ========================================================= -->
    <Style x:Key="Pill.Border" TargetType="{x:Type Border}">
        <Setter Property="CornerRadius" Value="999" />
        <Setter Property="Padding" Value="12,6" />
        <Setter Property="Background" Value="{StaticResource Brush.SurfaceAlt}" />
        <Setter Property="BorderBrush" Value="{StaticResource Brush.Border}" />
        <Setter Property="BorderThickness" Value="1" />
        <Setter Property="SnapsToDevicePixels" Value="True" />
    </Style>

    <Style x:Key="Pill.Success" TargetType="{x:Type Border}" BasedOn="{StaticResource Pill.Border}">
        <Setter Property="Background" Value="{StaticResource Brush.Success}" />
        <Setter Property="BorderBrush" Value="{StaticResource Brush.Success}" />
        <Setter Property="Opacity" Value="0.22" />
    </Style>

    <Style x:Key="Pill.Danger" TargetType="{x:Type Border}" BasedOn="{StaticResource Pill.Border}">
        <Setter Property="Background" Value="{StaticResource Brush.Danger}" />
        <Setter Property="BorderBrush" Value="{StaticResource Brush.Danger}" />
        <Setter Property="Opacity" Value="0.22" />
    </Style>

    <Style x:Key="Pill.Accent" TargetType="{x:Type Border}" BasedOn="{StaticResource Pill.Border}">
        <Setter Property="Background" Value="{StaticResource Brush.Accent}" />
        <Setter Property="BorderBrush" Value="{StaticResource Brush.Accent}" />
        <Setter Property="Opacity" Value="0.18" />
    </Style>

</ResourceDictionary>
