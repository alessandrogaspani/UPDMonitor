<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:sys="clr-namespace:System;assembly=mscorlib">


    <!-- ========================================================= -->
    <!-- Fonts / Sizes / Spacing                                   -->
    <!-- ========================================================= -->
    <FontFamily x:Key="Font.App">Segoe UI</FontFamily>
    <FontFamily x:Key="Font.Mono">Consolas</FontFamily>

    <sys:Double x:Key="FontSize.Body">13</sys:Double>
    <sys:Double x:Key="FontSize.Caption">11</sys:Double>
    <sys:Double x:Key="FontSize.Header">14</sys:Double>

    <sys:Double x:Key="CornerRadius.S">4</sys:Double>
    <sys:Double x:Key="CornerRadius.M">8</sys:Double>

    <Thickness x:Key="Padding.S">8,4</Thickness>
    <Thickness x:Key="Padding.M">10,6</Thickness>
    <Thickness x:Key="Margin.S">6</Thickness>
    <Thickness x:Key="Margin.M">12</Thickness>

    <!-- ========================================================= -->
    <!-- Base palette (Dark flat semi-material)                     -->
    <!-- ========================================================= -->
    <!-- Surfaces -->
    <Color x:Key="Color.WindowBackground">#FF20242A</Color>
    <Color x:Key="Color.Surface">#FF2A3038</Color>
    <Color x:Key="Color.SurfaceRaised">#FF313845</Color>
    <Color x:Key="Color.SurfaceAlt">#FF384155</Color>


    <!-- Borders / separators -->
    <Color x:Key="Color.Border">#FF2E2E2E</Color>
    <Color x:Key="Color.Separator">#FF2A2A2A</Color>

    <!-- Text -->
    <Color x:Key="Color.TextPrimary">#FFEAEAEA</Color>
    <Color x:Key="Color.TextSecondary">#FFB6B6B6</Color>
    <Color x:Key="Color.TextDisabled">#FF6F6F6F</Color>

    <!-- Accent (Turquoise) -->
    <Color x:Key="Color.Accent">#FF25D0C6</Color>
    <!-- main -->
    <Color x:Key="Color.AccentHover">#FF3BE2D8</Color>
    <!-- +light -->
    <Color x:Key="Color.AccentPressed">#FF18B8AF</Color>
    <!-- -dark -->

    <!-- Status -->
    <Color x:Key="Color.Success">#FF3DDC97</Color>
    <Color x:Key="Color.Danger">#FFFF5C70</Color>
    <Color x:Key="Color.Warning">#FFFFB020</Color>

    <!-- Disabled surfaces -->
    <Color x:Key="Color.DisabledSurface">#FF191919</Color>
    <Color x:Key="Color.DisabledBorder">#FF262626</Color>

    <!-- ========================================================= -->
    <!-- Brushes (semantic keys)                                    -->
    <!-- ========================================================= -->
    <!-- Backgrounds -->
    <SolidColorBrush x:Key="Brush.WindowBackground" Color="{StaticResource Color.WindowBackground}"/>
    <SolidColorBrush x:Key="Brush.Surface" Color="{StaticResource Color.Surface}"/>
    <SolidColorBrush x:Key="Brush.SurfaceAlt" Color="{StaticResource Color.SurfaceAlt}"/>
    <SolidColorBrush x:Key="Brush.SurfaceRaised" Color="{StaticResource Color.SurfaceRaised}"/>

    <!-- Borders / lines -->
    <SolidColorBrush x:Key="Brush.Border" Color="{StaticResource Color.Border}"/>
    <SolidColorBrush x:Key="Brush.Separator" Color="{StaticResource Color.Separator}"/>

    <!-- Text -->
    <SolidColorBrush x:Key="Brush.TextPrimary" Color="{StaticResource Color.TextPrimary}"/>
    <SolidColorBrush x:Key="Brush.TextSecondary" Color="{StaticResource Color.TextSecondary}"/>
    <SolidColorBrush x:Key="Brush.TextDisabled" Color="{StaticResource Color.TextDisabled}"/>

    <!-- Accent -->
    <SolidColorBrush x:Key="Brush.Accent" Color="{StaticResource Color.Accent}"/>
    <SolidColorBrush x:Key="Brush.AccentHover" Color="{StaticResource Color.AccentHover}"/>
    <SolidColorBrush x:Key="Brush.AccentPressed" Color="{StaticResource Color.AccentPressed}"/>

    <!-- Status -->
    <SolidColorBrush x:Key="Brush.Success" Color="{StaticResource Color.Success}"/>
    <SolidColorBrush x:Key="Brush.Danger" Color="{StaticResource Color.Danger}"/>
    <SolidColorBrush x:Key="Brush.Warning" Color="{StaticResource Color.Warning}"/>

    <!-- Disabled -->
    <SolidColorBrush x:Key="Brush.DisabledSurface" Color="{StaticResource Color.DisabledSurface}"/>
    <SolidColorBrush x:Key="Brush.DisabledBorder" Color="{StaticResource Color.DisabledBorder}"/>

    <!-- ========================================================= -->
    <!-- Interaction brushes (reusable across controls)             -->
    <!-- ========================================================= -->
    <!-- Subtle hover overlay (used for list rows, buttons, etc.) -->
    <SolidColorBrush x:Key="Brush.HoverOverlay" Color="White" Opacity="0.06"/>
    <SolidColorBrush x:Key="Brush.PressedOverlay" Color="White" Opacity="0.10"/>

    <!-- Selection / highlight backgrounds -->
    <SolidColorBrush x:Key="Brush.SelectionBackground" Color="{StaticResource Color.Accent}" Opacity="0.22"/>
    <SolidColorBrush x:Key="Brush.FocusRing" Color="{StaticResource Color.Accent}" Opacity="0.90"/>

    <!-- TextBox selection/caret -->
    <SolidColorBrush x:Key="Brush.Caret" Color="{StaticResource Color.Accent}"/>
    <SolidColorBrush x:Key="Brush.TextSelection" Color="{StaticResource Color.Accent}" Opacity="0.35"/>


</ResourceDictionary>
