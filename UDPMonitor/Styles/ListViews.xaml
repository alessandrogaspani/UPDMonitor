<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- ========================================================= -->
    <!-- GridViewColumnHeader (log header)                          -->
    <!-- ========================================================= -->
    <Style x:Key="GridViewColumnHeader.Log" TargetType="{x:Type GridViewColumnHeader}">
        <Setter Property="Foreground" Value="{StaticResource Brush.TextSecondary}" />
        <Setter Property="Background" Value="{StaticResource Brush.SurfaceAlt}" />
        <Setter Property="FontFamily" Value="{StaticResource Font.App}" />
        <Setter Property="FontSize" Value="{StaticResource FontSize.Caption}" />
        <Setter Property="FontWeight" Value="SemiBold" />
        <Setter Property="Padding" Value="10,8" />
        <Setter Property="BorderBrush" Value="{StaticResource Brush.Separator}" />
        <Setter Property="BorderThickness" Value="0,0,0,1" />
        <Setter Property="HorizontalContentAlignment" Value="Left" />
        <Setter Property="VerticalContentAlignment" Value="Center" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type GridViewColumnHeader}">
                    <Border Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}">
                        <ContentPresenter Margin="0"
                                          HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                          VerticalAlignment="{TemplateBinding VerticalContentAlignment}"
                                          RecognizesAccessKey="True" />
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>



    

    <Style x:Key="ListViewItem.Log" TargetType="{x:Type ListViewItem}">
        <Setter Property="Background" Value="Transparent" />
        <Setter Property="Foreground" Value="{StaticResource Brush.TextPrimary}" />
        <Setter Property="Padding" Value="10,6" />
        <Setter Property="HorizontalContentAlignment" Value="Stretch" />
        <Setter Property="VerticalContentAlignment" Value="Center" />
        <Setter Property="SnapsToDevicePixels" Value="True" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type ListViewItem}">
                    <Grid>
                        <!-- Row background -->
                        <Border x:Name="RowBg" Background="{TemplateBinding Background}" />

                        <!-- Accent selection bar -->
                        <Border x:Name="SelBar"
                            Width="3"
                            HorizontalAlignment="Left"
                            Background="{StaticResource Brush.Accent}"
                            Opacity="0" />

                        <!-- IMPORTANT: GridView rows are rendered with GridViewRowPresenter -->
                        <GridViewRowPresenter x:Name="RowPresenter"
                                          Margin="{TemplateBinding Padding}"
                                          Columns="{Binding Path=View.Columns, RelativeSource={RelativeSource AncestorType=ListView}}"/>
                    </Grid>

                    <ControlTemplate.Triggers>

                        <!-- Alternating rows (requires AlternationCount=2 on ListView) -->
                        <Trigger Property="ItemsControl.AlternationIndex" Value="1">
                            <Setter TargetName="RowBg" Property="Background" Value="{StaticResource Brush.SurfaceAlt}" />
                        </Trigger>

                        <!-- Hover -->
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="RowBg" Property="Background" Value="{StaticResource Brush.SurfaceAlt}" />
                        </Trigger>

                        <!-- Selected -->
                        <Trigger Property="IsSelected" Value="True">
                            <Setter TargetName="RowBg" Property="Background" Value="{StaticResource Brush.SelectionBackground}" />
                            <Setter TargetName="SelBar" Property="Opacity" Value="1" />
                        </Trigger>

                        <!-- Disabled -->
                        <Trigger Property="IsEnabled" Value="False">
                            <Setter Property="Foreground" Value="{StaticResource Brush.TextDisabled}" />
                        </Trigger>

                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- ========================================================= -->
    <!-- ListView container                                          -->
    <!-- ========================================================= -->
    <Style x:Key="ListView.Log" TargetType="{x:Type ListView}">
        <Setter Property="Background" Value="{StaticResource Brush.Surface}" />
        <Setter Property="BorderBrush" Value="{StaticResource Brush.Border}" />
        <Setter Property="BorderThickness" Value="1" />
        <Setter Property="Foreground" Value="{StaticResource Brush.TextPrimary}" />
        <Setter Property="SnapsToDevicePixels" Value="True" />
        <Setter Property="ScrollViewer.HorizontalScrollBarVisibility" Value="Auto" />
        <Setter Property="ScrollViewer.VerticalScrollBarVisibility" Value="Auto" />
        <Setter Property="AlternationCount" Value="2" />
        <Setter Property="ItemContainerStyle" Value="{StaticResource ListViewItem.Log}" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type ListView}">
                    <Border Background="{TemplateBinding Background}"
                        BorderBrush="{TemplateBinding BorderBrush}"
                        BorderThickness="{TemplateBinding BorderThickness}"
                        CornerRadius="8"
                        SnapsToDevicePixels="True">
                        <ScrollViewer Focusable="False">
                            <ItemsPresenter />
                        </ScrollViewer>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>
