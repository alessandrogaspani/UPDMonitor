<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- ========================================================= -->
    <!-- Base style (applies to all TextBlock unless overridden)    -->
    <!-- ========================================================= -->
    <Style TargetType="{x:Type TextBlock}">
        <Setter Property="FontFamily" Value="{StaticResource Font.App}" />
        <Setter Property="FontSize" Value="{StaticResource FontSize.Body}" />
        <Setter Property="Foreground" Value="{StaticResource Brush.TextPrimary}" />
        <Setter Property="TextWrapping" Value="NoWrap" />
        <Setter Property="TextTrimming" Value="CharacterEllipsis" />
        <Setter Property="SnapsToDevicePixels" Value="True" />
        <Setter Property="UseLayoutRounding" Value="True" />
        <Setter Property="VerticalAlignment" Value="Center" />
    </Style>

    <!-- ========================================================= -->
    <!-- Body / primary                                             -->
    <!-- ========================================================= -->
    <Style x:Key="Text.Body" TargetType="{x:Type TextBlock}">
        <Setter Property="FontSize" Value="{StaticResource FontSize.Body}" />
        <Setter Property="Foreground" Value="{StaticResource Brush.TextPrimary}" />
    </Style>

    <!-- Secondary text (labels, column headers, etc.) -->
    <Style x:Key="Text.Secondary" TargetType="{x:Type TextBlock}">
        <Setter Property="FontSize" Value="{StaticResource FontSize.Body}" />
        <Setter Property="Foreground" Value="{StaticResource Brush.TextSecondary}" />
    </Style>

    <!-- Caption / small -->
    <Style x:Key="Text.Caption" TargetType="{x:Type TextBlock}">
        <Setter Property="FontSize" Value="{StaticResource FontSize.Caption}" />
        <Setter Property="Foreground" Value="{StaticResource Brush.TextSecondary}" />
    </Style>

    <!-- Hint (helper text under controls) -->
    <Style x:Key="Text.Hint" TargetType="{x:Type TextBlock}">
        <Setter Property="FontSize" Value="{StaticResource FontSize.Caption}" />
        <Setter Property="Foreground" Value="{StaticResource Brush.TextSecondary}" />
        <Setter Property="Opacity" Value="0.95" />
        <Setter Property="TextWrapping" Value="Wrap" />
        <Setter Property="TextTrimming" Value="None" />
    </Style>

    <!-- Hint (helper text under controls) -->
    <Style x:Key="Text.Quote" TargetType="{x:Type TextBlock}">
        <Setter Property="FontSize" Value="{StaticResource FontSize.Caption}" />
        <Setter Property="Foreground" Value="{StaticResource Brush.TextSecondary}" />
        <Setter Property="Opacity" Value="0.95" />
        <Setter Property="FontStyle" Value="Italic"/>
        <Setter Property="TextWrapping" Value="Wrap" />
        <Setter Property="TextTrimming" Value="None" />
    </Style>

    <!-- Header for sections -->
    <Style x:Key="Text.Header" TargetType="{x:Type TextBlock}">
        <Setter Property="FontSize" Value="{StaticResource FontSize.Header}" />
        <Setter Property="FontWeight" Value="SemiBold" />
        <Setter Property="Foreground" Value="{StaticResource Brush.TextPrimary}" />
    </Style>

    <!-- Monospace (IPs, ports, delta times, raw payload) -->
    <Style x:Key="Text.Mono" TargetType="{x:Type TextBlock}">
        <Setter Property="FontFamily" Value="{StaticResource Font.Mono}" />
        <Setter Property="FontSize" Value="{StaticResource FontSize.Body}" />
        <Setter Property="Foreground" Value="{StaticResource Brush.TextPrimary}" />
        <Setter Property="TextWrapping" Value="NoWrap" />
        <Setter Property="TextTrimming" Value="CharacterEllipsis" />
    </Style>

    <!-- Monospace secondary (e.g., timestamps less prominent) -->
    <Style x:Key="Text.MonoSecondary" TargetType="{x:Type TextBlock}" BasedOn="{StaticResource Text.Mono}">
        <Setter Property="Foreground" Value="{StaticResource Brush.TextSecondary}" />
    </Style>

    <!-- Disabled text -->
    <Style x:Key="Text.Disabled" TargetType="{x:Type TextBlock}">
        <Setter Property="Foreground" Value="{StaticResource Brush.TextDisabled}" />
    </Style>

    <!-- Accent text (sparingly: links, active values) -->
    <Style x:Key="Text.Accent" TargetType="{x:Type TextBlock}">
        <Setter Property="Foreground" Value="{StaticResource Brush.Accent}" />
        <Setter Property="FontWeight" Value="SemiBold" />
    </Style>

    <!-- Status text -->
    <Style x:Key="Text.Success" TargetType="{x:Type TextBlock}">
        <Setter Property="Foreground" Value="{StaticResource Brush.Success}" />
        <Setter Property="FontWeight" Value="SemiBold" />
    </Style>

    <Style x:Key="Text.Danger" TargetType="{x:Type TextBlock}">
        <Setter Property="Foreground" Value="{StaticResource Brush.Danger}" />
        <Setter Property="FontWeight" Value="SemiBold" />
    </Style>

    <Style x:Key="Text.Warning" TargetType="{x:Type TextBlock}">
        <Setter Property="Foreground" Value="{StaticResource Brush.Warning}" />
        <Setter Property="FontWeight" Value="SemiBold" />
    </Style>

</ResourceDictionary>
