<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Style x:Key="Button.Base" TargetType="{x:Type Button}">
        <Setter Property="FontFamily" Value="{StaticResource Font.App}" />
        <Setter Property="FontSize" Value="{StaticResource FontSize.Body}" />
        <Setter Property="Foreground" Value="{StaticResource Brush.TextPrimary}" />
        <Setter Property="Background" Value="{StaticResource Brush.SurfaceAlt}" />
        <Setter Property="BorderBrush" Value="{StaticResource Brush.Border}" />
        <Setter Property="BorderThickness" Value="1" />
        <Setter Property="Padding" Value="12,7" />
        <Setter Property="MinHeight" Value="32" />
        <Setter Property="Cursor" Value="Hand" />
        <Setter Property="SnapsToDevicePixels" Value="True" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type Button}">
                    <Grid>
                        <!-- Shadow layer -->
                        <Border x:Name="ShadowHost" CornerRadius="8" Opacity="0">
                            <Border.Effect>
                                <DropShadowEffect BlurRadius="14"
                                              ShadowDepth="3"
                                              Opacity="0.35"/>
                            </Border.Effect>
                        </Border>

                        <!-- Button body -->
                        <Border x:Name="Bd"
                            Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            CornerRadius="8">
                            <Grid>
                                <!-- top highlight -->
                                <Border Margin="1"
                                    CornerRadius="7"
                                    VerticalAlignment="Top"
                                    Height="10"
                                    Background="White"
                                    Opacity="0.06"/>
                                <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"
                                              RecognizesAccessKey="True"/>
                            </Grid>
                        </Border>
                    </Grid>

                    <ControlTemplate.Triggers>

                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="Bd" Property="Background" Value="{StaticResource Brush.SurfaceRaised}" />
                            <Setter TargetName="Bd" Property="BorderBrush" Value="{StaticResource Brush.TextSecondary}" />
                            <Setter TargetName="ShadowHost" Property="Opacity" Value="1" />
                        </Trigger>

                        <Trigger Property="IsPressed" Value="True">
                            <!-- pressed: less shadow + slightly down -->
                            <Setter TargetName="ShadowHost" Property="Opacity" Value="0.35" />
                            <Setter TargetName="Bd" Property="RenderTransform">
                                <Setter.Value>
                                    <TranslateTransform Y="1"/>
                                </Setter.Value>
                            </Setter>
                        </Trigger>

                        <Trigger Property="IsEnabled" Value="False">
                            <Setter Property="Foreground" Value="{StaticResource Brush.TextDisabled}" />
                            <Setter TargetName="Bd" Property="Background" Value="{StaticResource Brush.DisabledSurface}" />
                            <Setter TargetName="Bd" Property="BorderBrush" Value="{StaticResource Brush.DisabledBorder}" />
                            <Setter TargetName="ShadowHost" Property="Opacity" Value="0" />
                        </Trigger>

                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>


    <!-- Secondary: default flat button -->
    <Style x:Key="Button.Secondary" TargetType="{x:Type Button}" BasedOn="{StaticResource Button.Base}">
        <Setter Property="Background" Value="{StaticResource Brush.SurfaceAlt}" />
        <Setter Property="BorderBrush" Value="{StaticResource Brush.Border}" />
    </Style>

    <Style x:Key="Button.Primary" TargetType="{x:Type Button}" BasedOn="{StaticResource Button.Base}">
        <Setter Property="Background" Value="Transparent" />
        <Setter Property="BorderBrush" Value="{StaticResource Brush.Accent}" />
        <Setter Property="Foreground" Value="{StaticResource Brush.Accent}" />
        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Background" Value="{StaticResource Brush.SelectionBackground}" />
            </Trigger>
            <Trigger Property="IsPressed" Value="True">
                <Setter Property="Background" Value="{StaticResource Brush.SelectionBackground}" />
                <Setter Property="BorderBrush" Value="{StaticResource Brush.AccentHover}" />
                <Setter Property="Foreground" Value="{StaticResource Brush.AccentHover}" />
            </Trigger>
        </Style.Triggers>
    </Style>

    <!-- Outline (neutral) -->
    <Style x:Key="Button.Outline" TargetType="{x:Type Button}" BasedOn="{StaticResource Button.Base}">
        <Setter Property="Background" Value="Transparent" />
        <Setter Property="BorderBrush" Value="{StaticResource Brush.Border}" />
        <Setter Property="Foreground" Value="{StaticResource Brush.TextPrimary}" />
        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="BorderBrush" Value="{StaticResource Brush.TextSecondary}" />
                <Setter Property="Background" Value="{StaticResource Brush.SurfaceAlt}" />
            </Trigger>
        </Style.Triggers>
    </Style>

    <Style x:Key="Button.Danger" TargetType="{x:Type Button}" BasedOn="{StaticResource Button.Base}">
        <Setter Property="Background" Value="Transparent" />
        <Setter Property="BorderBrush" Value="{StaticResource Brush.Danger}" />
        <Setter Property="Foreground" Value="{StaticResource Brush.Danger}" />
        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Background" Value="{StaticResource Brush.Danger}" />
                <Setter Property="Foreground" Value="#FF0F1113" />
            </Trigger>
        </Style.Triggers>
    </Style>

    <Style x:Key="Button.Chip" TargetType="{x:Type Button}" BasedOn="{StaticResource Button.Base}">
        <Setter Property="Padding" Value="12,6" />
        <Setter Property="MinHeight" Value="28" />
        <Setter Property="Background" Value="{StaticResource Brush.SurfaceAlt}" />
        <Setter Property="BorderBrush" Value="{StaticResource Brush.Border}" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type Button}">
                    <Grid>
                        <Border x:Name="ShadowHost" CornerRadius="999" Opacity="0">
                            <Border.Effect>
                                <DropShadowEffect BlurRadius="12" ShadowDepth="2" Opacity="0.30"/>
                            </Border.Effect>
                        </Border>

                        <Border x:Name="Bd"
                            Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            CornerRadius="999"
                            Padding="{TemplateBinding Padding}">
                            <Grid>
                                <Border Margin="1"
                                    CornerRadius="998"
                                    VerticalAlignment="Top"
                                    Height="8"
                                    Background="White"
                                    Opacity="0.05"/>
                                <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                            </Grid>
                        </Border>
                    </Grid>

                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="Bd" Property="BorderBrush" Value="{StaticResource Brush.Accent}" />
                            <Setter TargetName="ShadowHost" Property="Opacity" Value="1" />
                        </Trigger>
                        <Trigger Property="IsPressed" Value="True">
                            <Setter TargetName="ShadowHost" Property="Opacity" Value="0.35" />
                            <Setter TargetName="Bd" Property="RenderTransform">
                                <Setter.Value>
                                    <TranslateTransform Y="1"/>
                                </Setter.Value>
                            </Setter>
                        </Trigger>
                        <Trigger Property="IsEnabled" Value="False">
                            <Setter TargetName="Bd" Property="Background" Value="{StaticResource Brush.DisabledSurface}" />
                            <Setter TargetName="Bd" Property="BorderBrush" Value="{StaticResource Brush.DisabledBorder}" />
                            <Setter Property="Foreground" Value="{StaticResource Brush.TextDisabled}" />
                            <Setter TargetName="ShadowHost" Property="Opacity" Value="0" />
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>


</ResourceDictionary>
